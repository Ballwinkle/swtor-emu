<Window x:Class="ProtocolWalker.Dialogs.CaptureSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Capture Settings" Height="175" Width="555">
    <Grid>
        <Label Content="Proxy Server Listen Ports" Height="28" HorizontalAlignment="Left" Margin="12,46,0,0" Name="label1" VerticalAlignment="Top" Width="155" FontWeight="Bold" />
        <TextBox Text="8995,4443" Height="23" HorizontalAlignment="Left" Margin="173,48,0,0" Name="textBox1" VerticalAlignment="Top" Width="348" />
        <Button Content="Start Capture" Height="23" HorizontalAlignment="Left" Margin="387,101,0,0" Name="button1" VerticalAlignment="Top" Width="134" Click="button1_Click" />
        <Label Content="Enter one or more TCP ports, comma-separated." Height="28" HorizontalAlignment="Left" Margin="12,84,0,0" Name="label3" VerticalAlignment="Top" FontSize="10" />
        <Label Content="Syntax: 443,552,8888" FontSize="10" Height="28" HorizontalAlignment="Left" Margin="12,104,0,0" Name="label4" VerticalAlignment="Top" />
        <Label Content="Interface" FontWeight="Bold" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label2" VerticalAlignment="Top" Width="65" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="83,15,0,0" Name="cb_interfaceList" VerticalAlignment="Top" Width="438" />
    </Grid>
</Window>
